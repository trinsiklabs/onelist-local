# Onelist Environment Configuration
# Copy this file to .env and fill in the values
# NEVER commit your .env file to version control
#
# See docs/DEPLOYMENT.md for detailed setup instructions

# =============================================================================
# REQUIRED
# =============================================================================

# Database Configuration
# PostgreSQL 15+ with pgvector extension required
DATABASE_URL=ecto://onelist:CHANGE_ME@localhost/onelist_dev

# Phoenix Application Secret
# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=

# =============================================================================
# STORAGE
# =============================================================================

# Storage backend: local, s3, or gcs
STORAGE_BACKEND=local

# Local storage path (when STORAGE_BACKEND=local)
STORAGE_LOCAL_PATH=./storage

# S3/R2/B2 Configuration (when STORAGE_BACKEND=s3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_BUCKET=onelist-storage
# S3_REGION=us-east-1

# Custom S3 endpoint (for Cloudflare R2, Backblaze B2, MinIO, etc.)
# Cloudflare R2: https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
# Backblaze B2: https://s3.REGION.backblazeb2.com
# S3_ENDPOINT=

# Enable E2EE (client-side encryption)
# STORAGE_E2EE_ENABLED=false

# Mirror to additional backends (comma-separated: s3,gcs)
# STORAGE_MIRRORS=

# =============================================================================
# AI / AGENTS
# =============================================================================

# OpenAI API Key (required for Searcher agent embeddings)
OPENAI_API_KEY=

# =============================================================================
# OAUTH (Optional - for social login)
# =============================================================================

# GitHub OAuth
# Create at: https://github.com/settings/developers
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# Google OAuth
# Create at: https://console.developers.google.com/
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Apple Sign In
# Configure at: https://developer.apple.com/
# APPLE_CLIENT_ID=
# APPLE_TEAM_ID=
# APPLE_KEY_ID=
# APPLE_PRIVATE_KEY=

# =============================================================================
# PRODUCTION ONLY
# =============================================================================

# Public hostname (required in production)
# PHX_HOST=onelist.yourdomain.com

# HTTP port (default: 4000)
# PORT=4000

# Enable Phoenix server (set to true in production)
# PHX_SERVER=true

# Database pool size
# POOL_SIZE=10

# Enable IPv6
# ECTO_IPV6=false

# =============================================================================
# EMAIL (Production)
# =============================================================================

# Mailgun
# MAILGUN_API_KEY=
# MAILGUN_DOMAIN=
