{
  "id": "onelist-memory",
  "name": "Onelist Memory Sync",
  "version": "1.0.0",
  "description": "Smart memory retrieval from Onelist Search API with hybrid semantic+keyword search. Syncs chat to Onelist for memory extraction.",
  "author": "Stream",
  "configSchema": {
    "type": "object",
    "properties": {
      "apiUrl": {
        "type": "string",
        "description": "Onelist API base URL"
      },
      "apiKey": {
        "type": "string",
        "description": "Onelist API key"
      },
      "sessionId": {
        "type": "string",
        "description": "Session identifier for grouping messages"
      },
      "enabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable/disable the entire plugin"
      },
      "smartRetrievalEnabled": {
        "type": "boolean",
        "default": true,
        "description": "Enable query-based retrieval from Onelist Search API"
      },
      "retrievalLimit": {
        "type": "number",
        "default": 10,
        "description": "Max memories to retrieve"
      },
      "retrievalThreshold": {
        "type": "number",
        "default": 0.5,
        "description": "Min relevance score 0-1"
      },
      "retrievalSearchType": {
        "type": "string",
        "enum": ["hybrid", "semantic", "keyword"],
        "default": "hybrid",
        "description": "Search type for retrieval"
      },
      "fallbackEnabled": {
        "type": "boolean",
        "default": true,
        "description": "Fall back to local file injection if search fails"
      },
      "autoInjectMessageCount": {
        "type": "number",
        "default": 50,
        "description": "Fallback: Number of recent messages to inject"
      },
      "autoInjectHoursBack": {
        "type": "number",
        "default": 2,
        "description": "Fallback: How many hours back to look"
      },
      "autoInjectMinMessages": {
        "type": "number",
        "default": 5,
        "description": "Fallback: Minimum messages required"
      }
    },
    "required": []
  },
  "uiHints": {
    "apiKey": { "label": "Onelist API Key", "sensitive": true },
    "apiUrl": { "label": "Onelist API URL", "placeholder": "http://localhost:4000" },
    "smartRetrievalEnabled": { "label": "Smart Retrieval", "hint": "Query Onelist for relevant memories" },
    "retrievalSearchType": { "label": "Search Type", "hint": "hybrid recommended for best results" },
    "retrievalLimit": { "label": "Memory Limit", "hint": "Max memories to inject (default: 10)" }
  }
}
